generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  accounts  Account[]
  orders    Order[]
  reviews   Review[]
  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  type              String
  access_token      String?
  token_type        String?
  scope             String?
  expires_at        Int?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Product {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  priceCents  Int
  imageUrl    String?
  svgTemplate String?
  createdAt   DateTime @default(now())
  reviews     Review[]
}

model Review {
  id        String   @id @default(cuid())
  productId String
  userId    String
  rating    Int
  content   String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Order {
  id            String   @id @default(cuid())
  userId        String
  stripeSession String   @unique
  amountCents   Int
  currency      String   // "AUD"
  status        String   // created|paid|failed
  artworkS3Key  String?
  finalSvg      String?
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
}